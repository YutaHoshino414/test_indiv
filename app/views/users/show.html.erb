<div class="row">
  <div class="col-3">
    <h4>サイドメニュー</h4>
    <div class="list-group"><br>
      <a href="#" class="list-group-item">投稿する</a>
      <a href="#" class="list-group-item">投稿中アイテム</a>
      <a href="#" class="list-group-item">売却済み</a>
      <a href="#" class="list-group-item">　　</a>
    </div><br><br><br><br>
    <h5>設定</h5>
    <div class="list-group"><br>
    <%= link_to edit_user_path(@user.id) do %>
      <span class="list-group-item">プロフィール編集する</span>
        <% end %>
      <span class="list-group-item">setting</span>
      <span class="list-group-item">setting</span>
    </div><br>
  </div>
  <div class="col-9">
    <h3><%= @user.username %>のページ</h3><br>
    <div class="jumbotron bg-info">
      <div class="row">
        <div class="col-3">
          <i class="fas fa-user-circle"></i>
        </div>
        <div class="col-9">
          <table class="table w-50">
           <tbody>
             <tr>
               <th>ユーザーid</th>
               <td><%= @user.id %></td>
             </tr>
              <tr>
                <th>ユーザー名</th>
                <td><%= @user.username %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
              </tr>
              <tr></tr>
            </tbody>
          </table>

        </div>
      </div>
   </div>

    <h3>フォロー中のユーザー</h3><br>
    <% @user.following.each do |user| %>
      <li>
        <%= link_to user_path(user) do %>
          <%= user.username %>
        <% end %>
      /<%= user.email %></li>
    <% end %>
  </div>
</div>