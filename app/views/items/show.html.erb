<h2>アイテム詳細</h2><br>
<table class="table table-striped w-50">
  <tbody>
      <tr>
        <th>アイテム名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>ブランド名</th>
        <td><%= @item.brand %></td>
      </tr>
      <tr>
        <th>アイテム紹介</th>
        <td><%= @item.content %></td>
      </tr>
      <tr>
        <th>価格</th>
        <td><%= @item.price %>円</td>
      </tr>
      <tr> 
        <th>投稿日</th>
        <td><%= @item.created_at.strftime('%Y-%m-%d %T') %></td>
      </tr>
      <tr>
        <th>投稿者</th>
        <td><%= @item.user.username %></td>
      </tr>
  </tbody>
</table><hr>
<%= link_to "投稿一覧に戻る", items_path %>